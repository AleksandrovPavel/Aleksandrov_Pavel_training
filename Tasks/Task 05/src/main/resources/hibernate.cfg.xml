<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://192.168.0.50:5432/pva88_db</property>
        <property name="connection.username">pva88</property>
        <property name="connection.password">2001</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgresPlusDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!-- update - обновление таблиц, create - создание заново таблиц, validate - проверка насоответствие таблиц-->
        <property name="hbm2ddl.auto">update</property>

        <mapping class="jdbc.model.User"/>



    </session-factory>
</hibernate-configuration>